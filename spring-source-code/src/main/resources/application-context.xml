                <ref bean="taskTrigger12"/>
                <ref bean="taskTrigger13"/>
                <ref bean="taskTrigger14"/>
                <ref bean="taskTrigger15"/>
            </list>
        </property>
    </bean>

    <!--以下初始化了将要运行的12个触发器，以及执行时间（10秒一次） 待执行方法-->
    <bean id="taskTrigger1"  class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="taskMethod1" />
        <property name="cronExpression"  value="0/10 * * * * ?"/>
    </bean>
    <bean id="taskMethod1" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="taskService" />
        <property name="targetMethod" value="method1" />
    </bean>

