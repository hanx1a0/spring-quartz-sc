    <context:component-scan base-package="com.peanut.service"/>

    <bean id="startQuertz" lazy-init="false" autowire="no" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <!--将已经初始化好的触发器交给调度器工厂管理-->
        <property name="triggers">
            <list>
                <ref bean="taskTrigger1"/>
                <ref bean="taskTrigger2"/>
                <ref bean="taskTrigger3"/>
                <ref bean="taskTrigger4"/>
                <ref bean="taskTrigger5"/>
                <ref bean="taskTrigger6"/>
                <ref bean="taskTrigger7"/>
                <ref bean="taskTrigger8"/>
                <ref bean="taskTrigger9"/>
